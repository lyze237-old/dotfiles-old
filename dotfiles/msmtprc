# vim: filetype=config
#These are settings for all accounts.
defaults 
protocol smtp

#Here is an example gmail account.
account mailbox 
from {{@@ env['mailbox_from'] @@}} 
user {{@@ env['mailbox_username'] @@}} 
password {{@@ env['mailbox_password'] @@}} 
host {{@@ env['mailbox_smtp_host'] @@}} 
port {{@@ env['mailbox_smtp_port'] @@}} 
auth on
tls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt

account default : mailbox
