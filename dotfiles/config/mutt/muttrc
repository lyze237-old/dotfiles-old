# Sources {{{
source '~/.config/mutt/onlinemailboxrc'
source '~/.config/mutt/bindings'
source '~/.config/mutt/macros'
source '~/.config/mutt/colors'
source '~/.config/mutt/sidebar'
source '~/.config/mutt/hooks'
# }}}

set signature = '~/.config/mutt/signature'

set sort = 'reverse-date'
set editor = "vim -c 'set spell spelllang=en,de'"
set timeout = "5"
set mail_check = "10"
set date_format="%d.%m %I:%M"
set index_format="%2C %Z %d %-15.15F %s (%-4.4c)"

set mailcap_path = ~/.mutt/mailcap

auto_view text/html
alternative_order text/plain text/enriched text/html

# {{{ Notifications
 
set new_mail_command="terminal-notifier -title '%v' -subtitle 'New Mail' -message '%n new messages, %u unread.' -activate 'com.apple.Terminal'"
# }}}

